<launch>

    <!-- Load the URDF/Xacro model of our robot -->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find mk2_torso_arm_description)/robots/mk2_torso_arm_description.URDF'" />
	
    <!-- Launch Rviz -->
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find mk2_controller)/launch/mk2_arm.vcg"/>

    <!-- Start the Example Driver -->
    <node pkg="mk2_controller" type="mk2_controller" name="mk2_controller" output="screen" >
        <rosparam command="load" file="$(find mk2_controller)/config/mk2_arm.yaml" />
    </node>

    <!-- Start the joystick node -->
    <node respawn="true" pkg="joy" type="joy_node" name="joy_arm" >
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="deadzone" value="0.12" />
       <remap from="joy" to="joy_arm" />
    </node> 

    <!-- Start the joystick node -->
    <node respawn="true" pkg="joy" type="joy_node" name="joy_torso" >
        <param name="dev" type="string" value="/dev/input/js1" />
        <param name="deadzone" value="0.12" />
    </node> 



    <!-- Load arm control node -->
    <node pkg="mk2_controller" type="move_arm_joy.py" name="move_arm_joy" />

   <!-- Load arm control node -->
    <node pkg="mk2_controller" type="move_torso_joy.py" name="move_torso_joy" />



    <!-- Provide simulated control of the robot joint angles 
	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" />
	<param name="/use_gui" value="True" /> -->
    
    <!-- Publish the robot state -->
	<node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher">
	<param name="publish_frequency" value="20.0"/>
	</node> 

    <!-- Publish a static transform between the robot base and the world frame -->
    <node pkg="tf" type="static_transform_publisher" name="world_base_broadcaster" args="3 3 1.5 0 0 -1.57 /world /torso_base_link 100" />
    <!-- <node pkg="tf" type="static_transform_publisher" name="world_mocap_broadcaster" args="3 3 0 0 0 0 /world /mocap_origin 100" /> -->
  
</launch>
