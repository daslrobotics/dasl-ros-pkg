<launch>

    <!-- Load the URDF/Xacro model of our robot -->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find mk2_controller)/robots/mk2_gimbal_description.URDF'" />

    <!-- Launch Rviz -->
	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find mk2_controller)/launch/mk2_gimbal.vcg"/>

    <!-- Start the joystick node -->
    <node respawn="true" pkg="joy" type="joy_node" name="joy" >
        <param name="dev" type="string" value="/dev/input/js0" />
        <param name="deadzone" value="0.12" />
        <!-- <remap from="joy" to="logitech" /> -->
    </node>

    <!-- Load arm control node -->
    <node pkg="mk2_controller" type="move_arm_joy.py" name="move_arm_joy" />

    <!-- Load gantry control node -->
    <node pkg="mk2_controller" type="mk2_controller" name="mk2_controller" output="screen" >
        <rosparam command="load" file="$(find mk2_controller)/config/mk2_gimbal.yaml" />
    </node> -->

    <!-- Publish a static transform between the robot base and the world frame -->
    <node pkg="tf" type="static_transform_publisher" name="world_base_broadcaster" args="3 3 1.5 0 0 0 /world /gimbal_base_link 100" /> 

</launch>

